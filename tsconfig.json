{
  "compilerOptions": {
    "jsx": "react",
    "target": "es5",
    "module": "commonjs",
    "skipDefaultLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "declarationDir": "dist",
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "removeComments": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "src/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
